*{
	margin: 0px auto;
	padding: 0px;
	font-family: "微软雅黑";
	font-size:15px;

}

img:hover {
	opacity: 0.7;
	filter: progid:DXImageTransform.Microsoft.Alpha(Opacity=70 );
}

#bg{
	margin-left: 500px;
	width:360px;
	height:360px;
	background:black;
	position: absolute;
	z-index:1000; 
	margin-top: 60px;
	opacity: 0.2;
}

#div{
	margin-left: 500px;
	width:360px;
	height:360px;
	position: absolute;
	z-index:1002; 
	margin-top: 60px;
}

#div_header{
	border-bottom: 1px solid #ccc;
	height: 59px;
	width: 100%;
}

.btn{
	color:white;
	margin-top:25px;
	display:inline-block;
	width:50%;
	height: 34px;
	cursor: pointer;
	font-size:16px;
	float: left;
}

.btn:hover{
	color: red;
	border-bottom: 1px solid red;
}

.active1{
	color: red;
	border-bottom: 1px solid red;
}

#y{
	margin-left:1px;
}

#imgs{
	margin-left:336px;
	position: absolute;
	z-index:1004; 
}

#imgs img{
	width:24px;
	height:24px; 
	opacity: 0.1;
}

#imgs img:hover{
	opacity: 0.7;
}

