@charset "utf-8";
/* CSS Document */
#footer{
	width:100%;
	height:80px;
	float:right;
	background:#000;
	position: fixed;
	bottom: 0px;
}

#footer .footer_link ul{
	padding-left:100px;
	padding-top:20px;
	text-align:right;	
}
#footer .footer_link li {
	margin-right:30px;
	text-align:center;
	float:left;
	list-style:none;
}
#footer .footer_link li a{
	text-decoration:none;
	color:#999;
	font-size:14px;
}

#footer .footer_link li a:hover{
	color:#fff;
}

.footer_intro p{
	padding-left:100px;	
	font-size: 14px;
}

